@model BrushFX_PaintingCompany.Models.ContactInfo

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="https://fonts.googleapis.com/css?family=Oswald:700|Patua+One|Roboto+Condensed:700" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<section id="contact" class="content-section text-center">
    <div class="contact-section">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Get in touch by filling out the contact form or visiting our Fackebook,Twitter, Instagram or Google.</p>
            <div class="row">
                <!--<div class="text-success"></div>-->
                <!--<div class="text-danger"></div>-->
                <div class="col-md-8 col-md-offset-2">
                    <form class="form-horizontal" action="@Url.Action("Contact","Home")" method="post">
                        <div class="form-group">
                            <label for="exampleInputName2">Name</label>
                            <input type="text"  class="form-control center-block" id="name" placeholder="Jane Doe" name="Username">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail2">Email</label>
                            <input type="email" class="form-control center-block" id="email" placeholder="jane.doe@example.com" name="EmailAddress">
                        </div>
                        <div class="form-group">
                            <label form="phoneInput">Phone</label>
                            <input type="text" class="form-control center-block" id="phone" placeholder="111-222-3333" name="PhoneNumber" />
                        </div>
                        <div class="form-group ">
                            <label for="exampleInputText">Your Message</label>
                            <textarea class="form-control center-block" id="message" placeholder="Description" name="Message"></textarea>
                        </div>
                        <button type="submit" id="subButton" class="btn btn-default">Send Message</button>
                    </form>
                    <hr>
                    <h3>Check Us Out</h3>
                    <ul class="list-inline banner-social-buttons">
                        <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter"> <span class="network-name">Twitter</span></i></a></li>
                        <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-facebook"> <span class="network-name">Facebook</span></i></a></li>
                        <li><a href="#" class="btn btn-default btn-lg"><i class="fa fa-youtube-play"> <span class="network-name">Youtube</span></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $("#subButton").submit(function () {
            alert("submitted");
            if ($("#name").length() > 50) { alert("Your name is too long. Please enter in a shorter name.") }
            if ($("#email").length() > 50) { alert("Your email is too long. Please enter in a shorter email address.") }
            if ($("#phone").length() > 15) { alert("Your phone number is too long. Please enter in a shorter phone number.") }
            if ($("#message").length() > 1000) { alert("Your message is too long. Please enter in a shorter phone number.") }
        });
    });
</script>